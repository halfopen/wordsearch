#!/bin/bash

echo "----------------------------------------------------"
echo "-                                                  "
echo "-wordSearch is setting up...         "
echo "-CopyRight:halfopen                    "
echo "-                                                  "
echo "----------------------------------------------------"
echo "begin to compile"


cd /opt/wordSearch/src
qmake -o Makefile Search.pro
make
mv wordSearch ../
echo "removing source file"
sudo rm -rf src/
